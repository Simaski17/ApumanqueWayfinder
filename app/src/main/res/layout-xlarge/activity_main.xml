<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/fondo"
        android:weightSum="6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            android:weightSum="9">

            <LinearLayout
                android:id="@+id/llLogoApumanque"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                android:background="#98c7ed">

                <include layout="@layout/header_route"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMapa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.97"
                android:background="#ffffff">

                <TextView
                    android:text="Mapa"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTiendas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.97"
                android:background="#98c7ed">

                <TextView
                    android:text="Tiendas"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llComida"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.97"
                android:background="#ffffff">

                <TextView
                    android:text="Comida"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDescuentos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.97"
                android:background="#98c7ed">

                <TextView
                    android:text="Descuentos"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llParticipa"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.97"
                android:background="#ffffff">

                <TextView
                    android:text="Participa y gana"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.85"
                android:background="#98c7ed">

                <TextView
                    android:text="Area de busqueda"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.21">

            <include layout="@layout/activity_mapa"/>

        </LinearLayout>





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.74"
            android:weightSum="14">
            
            <LinearLayout
                android:id="@+id/llPisoTres"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.05"
                android:background="#67d15c">

                <TextView
                    android:text="P3"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPisoDos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.05"
                android:background="#f4dc57">

                <TextView
                    android:text="P2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPisoUno"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.05"
                android:background="#7cb7fa">

                <TextView
                    android:text="P1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llServicios"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="#ffffff">

                <TextView
                    android:text="SERVICIOS"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInformacionAndBanos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ff921f">

                <TextView
                    android:id="@+id/tvInformacionAndBanos"
                    android:text="@string/informacion"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBanosDamaAndAscensor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvBanosDamaAndAscensor"
                    android:text="@string/banos_damas"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBanosCaballerosAndEstacionamiento"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ff921f">

                <TextView
                    android:id="@+id/tvBanosCaballerosAndEstacionamiento"
                    android:text="@string/banos_caballeros"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCajerosAndDescuentos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvCajerosAndDescuentos"
                    android:text="@string/cajeros"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAscensor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ff921f">

                <TextView
                    android:id="@+id/tvAscensor"
                    android:text="@string/ascensor"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCochesSillas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvCochesSillas"
                    android:text="@string/coches_sillas"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGuardaPeques"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ff921f">

                <TextView
                    android:id="@+id/tvGuardaPeques"
                    android:text="@string/guardapeques"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDescuentosPromociones"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.93"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/tvDescuentosPromociones"
                    android:text="@string/descuentos"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.91"
                android:background="#ff921f">

            </LinearLayout>
            

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
